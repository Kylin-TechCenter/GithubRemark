{
  "manifest_version": 2,
  "name": "GithubRemark",
  "version": "0.5.0",
  "description": "给你的Github好友增加备注名吧～",
  "icons": { "128": "images/github_512.png" },
  "background": {
    "persistent": true,
    "scripts": ["bg.js"]
  },
  "permissions": ["tabs", "*://*.github.com/*"],
  "browser_action": {
    "default_title": "GithubRemark",
    "default_icon": {
        "19": "images/github.png"
    },
    "default_popup": "popup.html"
  },
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
  },
  "devtools_page": "options.html"
}

